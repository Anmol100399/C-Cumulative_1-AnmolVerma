@model C__Cumulative_1_AnmolVerma.Models.Teacher
@{
    ViewBag.Title = "Show";
}

<a class="navlink" href="/Teacher/List">Back To Teachers</a>
<a class="dellink" href="/Teacher/DeleteConfirm/@Model.TeacherId">Delete</a>
<div id="containershow">
        <style>
            table, th, td {
                border: 1px solid black;
                padding: 10px;
                text-align: center;
            }
            .dellink {
                display: flow;
                font-weight: Bold;
                font-size: 22px;
                text-decoration: none;
                color: red;
            }

            .navlink {
                text-decoration: none;
                font-size: 22px;
            }
        </style>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Employee Number</th>
                    <th>Hire Date</th>
                    <th>Salary</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.TeacherId</td>
                    <td>@Model.TeacherFname</td>
                    <td>@Model.TeacherLname</td>
                    <td>@Model.EmployeeNumber</td>
                    <td>@Model.HireDate</td>
                    <td>@Model.Salary</td>
                </tr>
            </tbody>
        </table>
</div>
